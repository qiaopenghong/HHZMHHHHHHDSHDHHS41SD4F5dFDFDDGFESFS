<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hhzmy.main.GoodsActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/goods_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/cpt_back"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:id="@+id/ll"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="40dp"
                android:padding="15dp"
                android:text="商品"
                />
            <TextView
                android:id="@+id/goods_xiangqing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:padding="15dp"
                android:text="详情"
                />
            <TextView
                android:id="@+id/goods_pingjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:padding="15dp"
                android:text="评价"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/gwc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/cart1_make_order_add"
            android:layout_gravity="center"
            android:padding="10dp"
            />
        <ImageView
            android:id="@+id/xyd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ebuy"
            android:padding="15dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/good_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:background="@mipmap/commodity_castom_down"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:background="@mipmap/commodity_shop_down"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/commodity_favor_down"
            />
        <TextView
            android:id="@+id/lijibuy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="立即购买"
            android:background="#ffff00"
            android:textColor="#fff"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/GoShop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="15sp"
            android:background="#ff0000"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="加入购物车"
            />
    </LinearLayout>
</LinearLayout>
